<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:elevation="8dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/item_img_news"/>

        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_tv"
            android:paddingHorizontal="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="20:30 прибыл Яхё Сатору"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="16dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:id="@+id/item_tv_title"/>
        
        <TextView
            android:background="@drawable/bg_tv"
            android:paddingHorizontal="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Салиев Яхё"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/item_tv_title"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:id="@+id/item_tv_author"/>
        
        <TextView
            android:background="@drawable/bg_tv"
            android:paddingHorizontal="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/item_tv_author"
            android:text="Sunday, 9 May 2023"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:layout_marginEnd="16dp"
            android:id="@+id/item_tv_date"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>